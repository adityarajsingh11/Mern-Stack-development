<% layout("layouts/boilerplate") %>

<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
  <% for (let lists of allListings) { %>
    <a href="/listings/<%= lists._id %>" class="listing-link">
      <div class="card col" style="width:22rem; margin-left:1rem;">
        <img 
          src="<%= lists.image %>" 
          class="card-img-top" 
          alt="Listing Image" 
          style="height:15rem;" 
           
        />
        
        <div class="card-img-overlay"></div>

        <div class="card-body">
          <h5 class="card-title"><%= lists.title %></h5>
          <p class="card-text"><%= lists.description %></p>
          <p class="btn btn-primary">&#x20B9;<%= lists.price.toLocaleString("en-IN") %></p>
        </div>
      </div>
    </a>
  <% } %>
</div>